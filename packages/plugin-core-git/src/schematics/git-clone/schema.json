{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "SchematicsSchematicSchema",
  "title": "Schematic Options Schema",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "description": "The url from where to pull"
    },
    "destinationPath": {
      "type": "string",
      "description": "Absolute path to the clone filepath"
    },
    "bare": {
      "type": "boolean",
      "description": "The version of BaC",
    },
    "_bacContext": {
      "type": "object",
      "description": "Ubiquitous bac context"
    }
  },
  "required": ["name", "destinationPath"]
}
