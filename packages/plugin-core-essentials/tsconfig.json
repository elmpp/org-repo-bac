{
  "extends": "../../tsconfig.options.json",
  "include": [
    "src/**/*",
    "*.spec.*",
    "*.js",
    "*.ts"
  ],
  "references": [
    {
      "path": "../pkg-address"
    },
    {
      "path": "../pkg-core"
    },
    {
      "path": "../tests/pkg-tests-core"
    }
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@business-as-code/address": [
        "../pkg-address/src/index.ts"
      ],
      "@business-as-code/address/*": [
        "../pkg-address/src/*"
      ],
      "@business-as-code/core": [
        "../pkg-core/src/index.ts"
      ],
      "@business-as-code/core/*": [
        "../pkg-core/src/*"
      ],
      "@business-as-code/tests-core": [
        "../tests/pkg-tests-core/src/index.ts"
      ],
      "@business-as-code/tests-core/*": [
        "../tests/pkg-tests-core/src/*"
      ]
    }
  }
}
