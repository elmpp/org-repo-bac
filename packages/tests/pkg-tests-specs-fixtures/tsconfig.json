{
  "extends": "../../../tsconfig.options.json",
  "include": [
    "../../../types/**/*",
    "src/**/*",
    "*.spec.*",
    "*.js",
    "*.ts"
  ],
  "references": [
    {
      "path": "../../pkg-address"
    },
    {
      "path": "../../pkg-core"
    },
    {
      "path": "../pkg-tests-core"
    },
    {
      "path": "../pkg-tests-git-mock-server"
    }
  ],
  "compilerOptions": {
    "emitDeclarationOnly": false,
    "noEmit": true,
    "paths": {
      "@business-as-code/address": [
        "../../pkg-address/src/index.ts"
      ],
      "@business-as-code/address/*": [
        "../../pkg-address/src/*"
      ],
      "@business-as-code/core": [
        "../../pkg-core/src/index.ts"
      ],
      "@business-as-code/core/*": [
        "../../pkg-core/src/*"
      ],
      "@business-as-code/tests-core": [
        "../pkg-tests-core/src/index.ts"
      ],
      "@business-as-code/tests-core/*": [
        "../pkg-tests-core/src/*"
      ]
    }
  }
}
