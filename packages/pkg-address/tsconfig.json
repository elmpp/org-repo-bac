{
  "extends": "../../tsconfig.options.json",
  "include": ["src/**/*", "*.spec.*", "*.js", "*.ts"],
  "references": [
    {
      "path": "../pkg-error"
    },
    {
      "path": "../pkg-fslib"
    }
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@business-as-code/error": ["../pkg-error/src/index.ts"],
      "@business-as-code/error/*": ["../pkg-error/src/*"],
      "@business-as-code/fslib": ["../pkg-fslib/src/index.ts"],
      "@business-as-code/fslib/*": ["../pkg-fslib/src/*"]
    }
  }
}
