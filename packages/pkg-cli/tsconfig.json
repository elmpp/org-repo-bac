{
  "extends": "../../tsconfig.options.json",
  "include": ["src/**/*", "*.spec.*", "*.js", "*.ts"],
  "references": [
    {
      "path": "../pkg-core"
    },
    {
      "path": "../plugin-core-essentials"
    },
    {
      "path": "../plugin-core-git"
    },
    {
      "path": "../plugin-core-package-manager-pnpm"
    },
    {
      "path": "../plugin-core-package-manager-yarn"
    },
    {
      "path": "../plugin-dev-changesets"
    },
    {
      "path": "../plugin-dev-essentials"
    },
    {
      "path": "../tests/pkg-tests-core"
    },
    {
      "path": "../tests/plugin-dev-tests"
    }
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "emitDeclarationOnly": false,
    "paths": {
      "@business-as-code/core": ["../pkg-core/src/index.ts"],
      "@business-as-code/core/*": ["../pkg-core/src/*"],
      "@business-as-code/plugin-core-essentials": [
        "../plugin-core-essentials/src/index.ts"
      ],
      "@business-as-code/plugin-core-essentials/*": [
        "../plugin-core-essentials/src/*"
      ],
      "@business-as-code/plugin-core-git": ["../plugin-core-git/src/index.ts"],
      "@business-as-code/plugin-core-git/*": ["../plugin-core-git/src/*"],
      "@business-as-code/plugin-core-package-manager-pnpm": [
        "../plugin-core-package-manager-pnpm/src/index.ts"
      ],
      "@business-as-code/plugin-core-package-manager-pnpm/*": [
        "../plugin-core-package-manager-pnpm/src/*"
      ],
      "@business-as-code/plugin-core-package-manager-yarn": [
        "../plugin-core-package-manager-yarn/src/index.ts"
      ],
      "@business-as-code/plugin-core-package-manager-yarn/*": [
        "../plugin-core-package-manager-yarn/src/*"
      ],
      "@business-as-code/plugin-dev-changesets": [
        "../plugin-dev-changesets/src/index.ts"
      ],
      "@business-as-code/plugin-dev-changesets/*": [
        "../plugin-dev-changesets/src/*"
      ],
      "@business-as-code/plugin-dev-essentials": [
        "../plugin-dev-essentials/src/index.ts"
      ],
      "@business-as-code/plugin-dev-essentials/*": [
        "../plugin-dev-essentials/src/*"
      ],
      "@business-as-code/plugin-dev-tests": [
        "../tests/plugin-dev-tests/src/index.ts"
      ],
      "@business-as-code/plugin-dev-tests/*": [
        "../tests/plugin-dev-tests/src/*"
      ],
      "@business-as-code/tests-core": ["../tests/pkg-tests-core/src/index.ts"],
      "@business-as-code/tests-core/*": ["../tests/pkg-tests-core/src/*"]
    }
  }
}
