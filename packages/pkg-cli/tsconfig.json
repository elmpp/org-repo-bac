{
  "extends": "../../tsconfig.options.json",
  "include": [
    "src/**/*",
    "*.spec.*",
    "*.js",
    "*.ts"
  ],
  "references": [
    {
      "path": "../plugin-core-essentials"
    },
    {
      "path": "../tests/pkg-tests-core"
    },
    {
      "path": "../tests/plugin-core-tests"
    }
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "emitDeclarationOnly": false,
    "noEmit": true,
    "paths": {
      "@business-as-code/plugin-core-essentials": [
        "../plugin-core-essentials/src/index.ts"
      ],
      "@business-as-code/plugin-core-essentials/*": [
        "../plugin-core-essentials/src/*"
      ],
      "@business-as-code/plugin-core-tests": [
        "../tests/plugin-core-tests/src/index.ts"
      ],
      "@business-as-code/plugin-core-tests/*": [
        "../tests/plugin-core-tests/src/*"
      ],
      "@business-as-code/tests-core": [
        "../tests/pkg-tests-core/src/index.ts"
      ],
      "@business-as-code/tests-core/*": [
        "../tests/pkg-tests-core/src/*"
      ]
    }
  }
}
